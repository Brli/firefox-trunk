#!/bin/sh

set -e

if [ "$1" = "remove" ] || [ "$1" = "deconfigure" ] ; then
    update-alternatives --remove x-www-browser /usr/bin/firefox-3.0
    rm -f /var/lib/update-notifier/user.d/firefox-3.0-restart-required
fi

if [ -f /usr/share/apport/package-hooks/firefox-3.0.pyc ] ; then
    rm -f /usr/share/apport/package-hooks/firefox-3.0.pyc
fi


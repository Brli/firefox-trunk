+nsMenuBar::AppendMenuObject(nsMenuObject *aChild)
+{
+    aChild->CreateNativeData();
+    gboolean res = dbusmenu_menuitem_child_append(mNativeData,
+                                                  aChild->GetNativeData());
+    return res && mMenuObjects.AppendElement(aChild);

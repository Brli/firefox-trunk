+NS_IMETHODIMP
+nsMenuObject::IconLoader::Notify(imgIRequest *aProxy,
+                                 int32_t aType, const nsIntRect *aRect)
+{
+    if (!mOwner) {
+        return NS_OK;
+    }
+
+    if (aProxy != mImageRequest) {
+        return NS_ERROR_FAILURE;
+    }
+
+    if (aType == imgINotificationObserver::LOAD_COMPLETE) {
+        mImageRequest->Cancel(NS_BINDING_ABORTED);
+        mImageRequest = nullptr;
+        return NS_OK;
+    }
+
+    if (aType != imgINotificationObserver::FRAME_COMPLETE) {
+        return NS_OK;
+    }
+
+    if (mIconLoaded) {
+        return NS_OK;
+    }
+
+    mIconLoaded = true;
+
+    nsCOMPtr<imgIContainer> img;
+    mImageRequest->GetImage(getter_AddRefs(img));
+    if (!img) {
+        return NS_ERROR_FAILURE;
+    }
+
+    int32_t origWidth, origHeight;
+    img->GetWidth(&origWidth);
+    img->GetHeight(&origHeight);
+
+    bool needsClip = false;
+
+    if (!mImageRect.IsEmpty()) {
+        if (mImageRect.XMost() > origWidth || mImageRect.YMost() > origHeight) {
+            // -moz-image-region is larger than the image
+            mImageRect.SetRect(0, 0, origWidth, origHeight);
+        }
+
+        if (!(mImageRect.x == 0 && mImageRect.y == 0 &&
+              mImageRect.width == origWidth &&
+              mImageRect.height == origHeight)) {
+            needsClip = true;
+        }
+    }
+
+    if ((!needsClip && (origWidth > 100 || origHeight > 100)) ||
+        (needsClip && (mImageRect.width > 100 || mImageRect.height > 100))) {
+        // The icon data needs to go across DBus. Make sure the icon
+        // data isn't too large, else our connection gets terminated and
+        // GDbus helpfully aborts the application. Thank you :)
+        NS_WARNING("Icon data too large");
+        mOwner->ClearIcon();
+        return NS_OK;
+    }
+
+    nsCOMPtr<imgIContainer> clippedImg;
+    if (needsClip) {
+        img->ExtractFrame(0, mImageRect, 0, getter_AddRefs(clippedImg));
+        if (!clippedImg) {
+            return NS_ERROR_FAILURE;
+        }
+    }
+
+    GdkPixbuf *pixbuf =
+        nsImageToPixbuf::ImageToPixbuf(clippedImg ? clippedImg : img);
+    if (pixbuf) {
+        dbusmenu_menuitem_property_set_image(mOwner->GetDbusMenuItem(),
+                                             DBUSMENU_MENUITEM_PROP_ICON_DATA,
+                                             pixbuf);
+        g_object_unref(pixbuf);
+    }
+
+    return NS_OK;
+}

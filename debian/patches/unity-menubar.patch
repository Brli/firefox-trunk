+class nsAutoGCancellable
+{
+public:
+    nsAutoGCancellable() : mCancellable(nullptr) { };
+
+    ~nsAutoGCancellable() {
+        if (mCancellable) {
+            g_cancellable_cancel(mCancellable);
+            g_object_unref(mCancellable);
+        }
+    }
+
+    void Init() {
+        Cancel();
+        mCancellable = g_cancellable_new();
+    }
+

+void
+nsMenu::OnOpen()
+{
+    if (NeedsBuild() && NS_FAILED(Build())) {
+        SetNeedsBuild(true);
+        return;
+    }
+
+    nsMenuObjectWeakReference<nsMenu> weak(this);
+    nsCOMPtr<nsIContent> origPopupContent(mPopupContent);
+    {
+        nsNativeMenuAutoUpdateBatch batch;
+
+        SetPopupState(ePopupState_Showing);
+        DispatchMouseEvent(mPopupContent, NS_XUL_POPUP_SHOWING);
+
+        ContentNode()->SetAttr(kNameSpaceID_None, nsGkAtoms::open,
+                               NS_LITERAL_STRING("true"), true);
+    }
+
+    if (!weak) {
+        // We were deleted!
+        return;
+    }
+
+    // I guess that the popup could have changed
+    if (origPopupContent != mPopupContent) {
+        return;
+    }
+
+    nsNativeMenuAutoUpdateBatch batch;
+
+    uint32_t count = Children().Length();
+    for (uint32_t i = 0; i < count; ++i) {
+        Children()[i]->ContainerIsOpening();
+    }
+
+    SetPopupState(ePopupState_Open);
+    DispatchMouseEvent(mPopupContent, NS_XUL_POPUP_SHOWN);
+}
+
+nsresult
+nsMenu::Build()
+{
+    while (Children().Length() > 0) {
+        RemoveMenuObjectAt(0);
+    }
+
+    if (NeedsBuild() && !HasPlaceholderItem()) {
+        NS_ASSERTION(!IsInUpdateBatch(), "How did we end up here?");
+
+        // Make sure there are no orphaned children. We skip this if
+        // we have a placeholder item, as this is handled elsewhere. In this
+        // case, we only add a placeholder when there are no other children,
+        // and assert when removing it that there are no other children.
+        GList *children = dbusmenu_menuitem_take_children(GetNativeData());
+        g_list_foreach(children, (GFunc)g_object_unref, nullptr);
+        g_list_free(children);
+    }
+
+    InitializePopup();
+
+    if (!mPopupContent) {
+        return NS_OK;
+    }
+
+    SetNeedsBuild(false);
+
+    uint32_t count = mPopupContent->GetChildCount();
+    for (uint32_t i = 0; i < count; ++i) {
+        nsIContent *childContent = mPopupContent->GetChildAt(i);
+
+        nsresult rv;
+        nsMenuObject *child = CreateChild(childContent, &rv);
+
+        if (child) {
+            rv = AppendMenuObject(child);
+        }
+
+        if (NS_FAILED(rv)) {
+            NS_ERROR("Menu build failed");
+            return rv;
+        }
+    }
+
+    return NS_OK;
+}

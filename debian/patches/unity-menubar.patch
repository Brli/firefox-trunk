+void
+nsMenuItem::InitializeDbusMenuItem()
+{
+    g_signal_connect(G_OBJECT(mDbusMenuItem),
+                     DBUSMENU_MENUITEM_SIGNAL_ITEM_ACTIVATED,
+                     G_CALLBACK(item_activated_cb), this);
+}

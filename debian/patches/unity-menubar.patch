+class nsMenuBarDocEventListener MOZ_FINAL : public nsIDOMEventListener
+{
+public:
+    NS_DECL_ISUPPORTS
+    NS_DECL_NSIDOMEVENTLISTENER
+
+    nsMenuBarDocEventListener(nsMenuBar *aOwner) : mOwner(aOwner) { };
+    ~nsMenuBarDocEventListener() { };

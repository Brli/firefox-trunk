+        if (mCancellable) {
+            g_object_unref(mCancellable);
+            mCancellable = nullptr;
+        }
+    }
+
+    void Cancel() {
+        if (mCancellable) {
+            g_cancellable_cancel(mCancellable);
+            g_object_unref(mCancellable);
+            mCancellable = nullptr;
+        }
+    }
+
+    operator GCancellable*() const {
+        return mCancellable;
+    }
+
+private:
+    GCancellable *mCancellable;
+};

+nsMenuBar::nsMenuBar() :
+    nsMenuObjectContainer(),
+    mTopLevel(nullptr),
+    mServer(nullptr),
+    mIsActive(false)
+{
+    MOZ_COUNT_CTOR(nsMenuBar);

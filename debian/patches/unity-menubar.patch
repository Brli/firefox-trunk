+class nsMenuObjectWeakReferenceBase
+{
+public:
+    ~nsMenuObjectWeakReferenceBase()
+    {
+        RemoveWeakReference(this);
+    }
+
+    nsMenuObject* GetMenuObject() { return mMenuObject; }
+
+    static void NotifyDestroyed(nsMenuObject *aMenuObject);
+
+protected:
+    nsMenuObjectWeakReferenceBase() : mMenuObject(nullptr) { };
+
+    void SetMenuObject(nsMenuObject *aMenuObject)
+    {
+        mMenuObject = aMenuObject;
+
+        mMenuObject ? AddWeakReference(this) : RemoveWeakReference(this);
+    }
+
+private:
+    nsMenuObjectWeakReferenceBase* GetPrevious() { return mPrev; }
+    void SetPrevious(nsMenuObjectWeakReferenceBase *aPrev)
+    {
+        mPrev = aPrev;
+    }
+    void Clear() { mMenuObject = nullptr; }
+
+    static void AddWeakReference(nsMenuObjectWeakReferenceBase *aWeak);
+    static void RemoveWeakReference(nsMenuObjectWeakReferenceBase *aWeak);
+
+    nsMenuObjectWeakReferenceBase *mPrev;
+    static nsMenuObjectWeakReferenceBase *sHead;
+
+    nsMenuObject *mMenuObject;
+};
+
+template<class T>
+class nsMenuObjectWeakReference : public nsMenuObjectWeakReferenceBase
+{
+public:
+    nsMenuObjectWeakReference() :
+        nsMenuObjectWeakReferenceBase() { };
+
+    nsMenuObjectWeakReference(T *aMenuObject) :
+        nsMenuObjectWeakReferenceBase()
+    {
+        SetMenuObject(aMenuObject);
+    }
+
+    nsMenuObjectWeakReference<T>& operator=(T *aMenuObject)
+    {
+        SetMenuObject(aMenuObject);
+        return *this;
+    }
+
+    T* operator->() { return static_cast<T *>(GetMenuObject()); }
+
+    operator T*() { return static_cast<T *>(GetMenuObject()); }
+};

+        if (mCommandContent->AttrValueIs(kNameSpaceID_None, nsGkAtoms::disabled,
+                                         nsGkAtoms::_true, eCaseMatters)) {
+            mContent->SetAttr(kNameSpaceID_None, nsGkAtoms::disabled,

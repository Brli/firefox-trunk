+        return false;
+    }
+
+    gboolean res = dbusmenu_menuitem_child_delete(mNativeData,
+                                                  mMenuObjects[aIndex]->GetNativeData());
+    mMenuObjects.RemoveElementAt(aIndex);
+
+    return !!res;
+}

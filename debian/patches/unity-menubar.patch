+void
+nsNativeMenuService::OnProxyCreated(GDBusProxy *aProxy)
+{
+    mDbusProxy = aProxy;
+    mCreateProxyRequest.Finish();
+
+    if (!mDbusProxy) {
+        SetOnline(false);
+        return;
